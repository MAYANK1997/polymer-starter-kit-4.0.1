 const select = document.getElementById("addRestrictionCategory");

    // Create default option
    const defaultOption = document.createElement("option");
    defaultOption.value = ""; // Empty value (or set your default value)
    defaultOption.textContent = "Select a category"; // Default text
    defaultOption.selected = true;
    defaultOption.disabled = true; // Prevent selection

    // Insert the default option at the beginning
    select.insertBefore(defaultOption, select.firstChild);
